________________________________________________________________________________
[General]
EnergyFile = (default '')
OutputFile = (default='linretrace-output.hdf5')
BFieldMode = (default = F)
DebugMode  = (default = F)

ChemicalPotential = (default = 0)  # if here run with the given mu

FermiOccupation   = (default = F)  # use fermi functions to determine occupation

RootMethod        = (default = 2)  # 0 secant
                                   # 1 linint
                                   # 2 riddler
                                   # 3 bisection

FullOutput        = (default = F)  # output band- and k-resolved quantities
EnergyOutput      = (default = T)  # output renormalized bands
Boltzmann         = (default = T)  # calculate Boltzmann regime
Interband         = (default = T)  # calculate Interband quantities

