[Scattering]
ScatteringFile    = (default = '') # if existent use all the quantities from this file only
ScatteringImpurity = (default = 0) # in combination with Scattering File
                                   # adds an additional constant scattering rate

# if we do NOT have a Scattering file
# we can supply a temperature range (in Kelvin)
# and a polynomial for the scattering rate
# and the quasi particle weights
TMinimum                  = (default = None)
TMaximum                  = (default = None)
TPoints                   = (default = None)
ScatteringCoefficients    = (default = None)
QuasiParticleCoefficients = (default = None)
