________________________________________________________________________________
[General]
EnergyFile = (default='')
RunMode    = (default='')
           # temp or mu

Bandgap   = (default = None) # new size of bandgap

BFieldMode = (default = F)

FullOutput        = (default = F)  # output band- and k-resolved response quantities
EnergyOutput      = (default = F)  # output renormalized bands

Interband         = (default = T)  # calculate Interband quantities
Intraband         = (default = T)  # calculate Intraband quantities
Boltzmann         = (default = T)  # calculate Boltzmann regime

FermiOccupation   = (default = F)  # use fermi functions to determine occupation

RootMethod        = (default = 2)  # 0 secant
                                   # 1 linint
                                   # 2 riddler
                                   # 3 bisection

OutputFile = (default='linretrace-output.hdf5')

________________________________________________________________________________
[TempMode] # if TMode activated

ChemicalPotential = (default = 0)  # if here run with the given mu
OldOutput = (default = None) # old output file from which we take the mu(T)
NImp = (default = 0) # number of additional impurity levels
ElectronOccupation = (default = -1) # number of electrons ... if not provided use the energyfile input




[[Scattering]]
ScatteringFile    = (default = '') # if existent use all the quantities from this file only
ScatteringImpurity = (default = 0) # in combination with Scattering File
                                   # adds an additional constant scattering rate

# if we do NOT have a Scattering file
# we can supply a temperature range (in Kelvin)
# and a polynomial for the scattering rate
# and the quasi particle weights
TMinimum                  = (default = None)
TMaximum                  = (default = None)
TPoints                   = (default = None)
ScatteringCoefficients    = (default = None)
QuasiParticleCoefficients = (default = None)

________________________________________________________________________________
[[Impurities]]
[[[1]]]
# one of these 4 input types
Absolute   = (default = None) # energy is absolute in [eV]
Valence    = (default = None) # relative upwards shift from top of valence band [eV]
Conduction = (default = None) # relative downwards shift from bottom of conduction band [eV]
Percentage = (default = None) # relative position inside the gap


# INPUT DATA
# Absolute : 4 numbers -- donor(+1)/acceptor(-1) density(per unit cell) energy degenracy

# Rest :     4 numbers -- donor(+1)/acceptor(-1) density(per unit cell) energy degenracy
# if there is a spin - dependency it defaults to spin 1 (up)

# e.g.: +1 1e-4 8.2514 2

# Rest :     5 numbers -- donor(+1)/acceptor(-1) density(per unit cell) energy degenracy spin
# e.g.: +1 1e-4 8.2514 2 1
[[[2]]]
... # as many as there are NImp supplied
# these shifts are applied AFTER the application of scissors



[MuMode] # if MuMode activated
Temperature = (default = 300)
MuMinimum = (default = mu_fermi - 15 eV)
MuMaximum = (default = mu_fermi + 15 eV)
MuPoints   = (default = 100)

ScatteringRate = (default = None)
QuasiParticleWeight = (default = 1)

________________________________________________________________________________
[Debug]
Debug string here (one oneline)

Debug options:
  Mpi : Output MPI information
  Quad: Calculate the Intra and Interband quantities also in quad precision.

  # this should be the standard at release ... fully automatic detection & co.
  TempReverse : Reverse the temperature loop
  Dmudt : if TempReverse & Fermioccupation & gapped & below certain temperature apply derivative
