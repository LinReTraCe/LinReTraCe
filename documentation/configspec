________________________________________________________________________________
[General]
EnergyFile         = (default = None)                  # LRTC energy (input) file
OutputFile         = (default = 'lrtc-date-time.hdf5') # Output file name - does not create folders

RunMode            = (default = None)                  # temp or mu
Bandgap            = (default = None)                  # Adjust Bandgap - one or two numbers (spins)
ElectronOccupation = (default = None)                  # Adjust system charge ... After the Bandgap adjustment
                                                       # Do not use this option to 'dope' the system with minimal charge
                                                       # use [TempMode] 'Doping' instead

FullOutput         = (default = None)                  # full: output momentum and band resolved responses
                                                       # ksum: output momentum summed, band resolved responses
                                                       # bsum: output momentum resolved, band summed responses
QuadResponse       = (default = F)                     # calculate quad precision responses
Interband          = (default = T)                     # calculate Interband quantities
Intraband          = (default = T)                     # calculate Intraband quantities
Boltzmann          = (default = T)                     # calculate Boltzmann approximation to inter and/or intra
BFieldMode         = (default = F)                     # calculate magnetic Intraband quantities
FermiOccupation    = (default = T)                     # T: Fermi function to determine occupation
                                                       # F: Digamma function to determine occupation
                                                       # Affects chemical potential, carrier concentration and total energies


________________________________________________________________________________
[TempMode]                                             # RunMode = temp
ConstantMu         = (default = None)                  # Fix Chemical potential for all temperatures
OldMuHdf5          = (default = None)                  # Use chemical potentials from old OutputFile
OldMuText          = (default = None)                  # Use chemical potentials from text file (compatible with lprint mu)
NImp               = (default = 0)                     # number of additional impurity levels
Doping             = (default = 0)                     # Additional doping [cm-3] or [per unitcell] depending on [General] NominalDoping
NominalDoping      = (default = F)                     # T: Interpret 'Doping' and [[Impurities]] densities
                                                       # as nominal doping [per unitcell] instead of volume doping [cm-3]

[[Scattering]]
ScatteringFile     = (default = None)                  # if existent use all the quantities from this HDF5 file only
ScatteringText     = (default = None)                  # if existent use all the quantities from this TEXT file only
                                                       # unpolarized: 3 columns: Temp Gamma(T) Z(T)
                                                       # polarized:   5 columns: Temp GammaUp(T) GammaDn(T) ZUp(T) ZDn(T)
                                                       # allows for arbitrary temperature dependence, however no momentum / band dependence
ScatteringOffset   = (default = 0)                     # in combination with ScatteringFile or ScatterintText
                                                       # adds an additional constant scattering rate

                                                       # if we do NOT have a Scattering file we can supply a temperature range [K]
                                                       # and a polynomial for the scattering rate and the quasi particle weights
                                                       # all (default = None) values are mandatory
TMinimum                    = (default = None)         # temperature minimum
TMaximum                    = (default = None)         # temperature maximum
TPoints                     = (default = None)         # number of temperature points
TLogarithmic                = (default = F)            # F: linear spacing -- T: logarithmic spacing

ScatteringCoefficients      = (default = None)         # n numbers separated by spaces : a b c
                                                       # representing the polynimal a + b * T + c * T**2
UpScatteringCoefficients    = (default = None)         # if one wants to differentiate between up and dn spin
DnScatteringCoefficients    = (default = None)         # use either ScatteringCoefficients or Up+Dn ScatteringCoefficients

QuasiParticleCoefficients   = (default = None)         # same as ScatteringCoefficients
UpQuasiParticleCoefficients = (default = None)         # must be a value between 0 and 1 for all temperature points
DnQuasiParticleCoefficients = (default = None)

EnergyCoefficients          = (default = None)         # OPTIONAL : additional energy dependence of the scattering rate - same as ScatteringCoefficients
                                                       # n numbers separated by spaces: a b c
UpEnergyCoefficients        = (default = None)         # representing the polynimal a * abs(e-mu_dft) + b * abs(e-mu_dft)**2 + c * abs(e-mu_dft)**3
DnEnergyCoefficients        = (default = None)         # we ALWAYS use the absolute value (no scattering decreaess can be achieved through this option)


________________________________________________________________________________

[[Impurities]]
[[[1]]]                                                # as many as provided in [TempMode] NImp
                                                       # Provide _one_ of the following four keywords:
Absolute   = (default = None)                          # energy is absolute in [eV]
Valence    = (default = None)                          # relative upwards shift from top of valence band [eV]
Conduction = (default = None)                          # relative downwards shift from bottom of conduction band [eV]
Percentage = (default = None)                          # relative position inside the gap
                                                       # Valence Conduction and Percentage only work for a gapped system

                                                       # Absolute :
                                                       # 4 numbers:    +1(donor)/-1(acceptor) density energy degeneracy

                                                       # Valence Conduction Percentage :
                                                       # 4 numbers:   +1(donor)/-1(acceptor) density energy degeneracy
                                                       # 5 numbers:   +1(donor)/-1(acceptor) density energy degeneracy 1/2(spin)

                                                       # density : [cm-3] or [per unitcell] depending on [General] NominalDoping
                                                       # energy : [eV] or 0<p<1 for Percentage
                                                       # energy shifts are applied after adjusting the bandgap!

                                                       # example donor 20meV below conduction band
                                                       # Conduction = +1 1e18 0.02 1
                                                       # example acceptor 10meV above valence band of spin down
                                                       # Valence    = -1 1e19 0.01 1 2
                                                       # example donor level in the center of the band
                                                       # Percentage = +1 1e15 0.5 2

Bandtype   = (default = None)                          # box, triangle, halfcircle, sine, sine2, sine3, sine4
Bandwidth  = (default = 0)                             # Bandwidth in [eV] for the provided Bandtype
                                                       # symmetric around given energy

